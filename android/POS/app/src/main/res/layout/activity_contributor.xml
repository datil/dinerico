    <TextView
        android:id="@+id/commercialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MegaSoft"
        android:layout_below="@id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/economicActivity"
