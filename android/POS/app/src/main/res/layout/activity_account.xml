<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="54dp"
            android:text="@string/signUpDes"
            style="@style/HeaderTittle"/>

        <TextView
            android:layout_width="match_parent"
            android:text="@string/signUpDes2"
            android:textStyle="bold"
            style="@style/HeaderTittle"/>

        <EditText
            android:background="@drawable/underline_gray_back_white"
            android:layout_marginTop="55dp"
            android:id="@+id/ruc"
            android:hint="@string/name"
            android:inputType="number"
            android:maxLength="13"
            android:text="1792072018001"
            style="@style/EditTextForm"/>

        <EditText
            android:background="@drawable/underline_gray_back_white"
            android:id="@+id/email"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            style="@style/EditTextForm"/>

        <EditText
            android:background="@drawable/underline_gray_back_white"
            android:id="@+id/password"
            android:hint="@string/initials"
            android:inputType="textPassword"
            android:ellipsize="end"
            style="@style/EditTextForm"/>

        <EditText
            android:maxLength="10"
            android:background="@drawable/underline_gray_back_white"
            android:id="@+id/mobilePhone"
            android:hint="@string/mobilePhone"
            android:inputType="number"
            style="@style/EditTextForm"/>

    </LinearLayout>

</ScrollView>
